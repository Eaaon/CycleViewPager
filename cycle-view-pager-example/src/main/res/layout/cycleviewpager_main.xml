<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="cn.androiddevelop.cycleviewpager.example.NoCycleTextView">

    <Button
        android:id="@+id/noCycleBtn"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_padding"
        android:layout_weight="1"
        android:text="@string/no_cycle_btn">
    </Button>

    <Button
        android:id="@+id/cycleBtn"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_padding"
        android:layout_weight="1"
        android:text="@string/cycle_btn">
    </Button>

    <Button
        android:id="@+id/wheelCycleBtn"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_padding"
        android:layout_weight="1"
        android:text="@string/wheel_cycle_btn">
    </Button>

    <Button
        android:id="@+id/eventCycleBtn"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_padding"
        android:layout_weight="1"
        android:text="@string/event_cycle_btn">
    </Button>

    <Button
        android:id="@+id/fixedCycleBtn"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_padding"
        android:layout_weight="1"
        android:text="@string/fixed_cycle_btn">
    </Button>

    <Button
        android:id="@+id/nestedCycleBtn"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_padding"
        android:layout_weight="1"
        android:text="@string/nested_cycle_btn">
    </Button>

</LinearLayout>